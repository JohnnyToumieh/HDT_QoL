<UserControl x:Class="HDT_QoL.MainOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:overlay="clr-namespace:HDT_QoL"
             xmlns:overlay2="clr-namespace:Hearthstone_Deck_Tracker.Controls.Overlay;assembly=HearthstoneDeckTracker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Name="BgsTopBar2" Orientation="Horizontal">
        <Border x:Name="BannedTribeBorder" Visibility="Collapsed" BorderBrush="#FFFFFF" BorderThickness="5" CornerRadius="2">
            <overlay:BannedTribeOverlay x:Name="BannedTribeOverlay" Height="55" VerticalAlignment="Top" />
        </Border>
        <overlay2:TurnCounter x:Name="TurnCounter" Visibility="Hidden" Margin="0,0,2,0"  Height="55" VerticalAlignment="Top" />
        <overlay2:BattlegroundsMinions x:Name="BattlegroundsMinionsPanel" Visibility="Hidden" />
    </StackPanel>
</UserControl>